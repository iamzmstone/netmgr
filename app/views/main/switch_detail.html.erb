<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>交换机</th>
      <th>VLAN</th>
      <th>描述</th>
      <th>网关</th>
      <th>掩码</th>
    </tr>
  </thead>
  <tbody>
  <% @switch.vlans.each do |v| %>
  <tr>
    <td><%= v.switch.name %></td>
    <td><%= v.vlan %></td>
    <td><%= v.remark %></td>
    <td><%= v.gateway %></td>
    <td><%= v.netmask %></td>
  </tr>
  <% end %>
  </tbody>
</table>


<p></p>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>交换机</th>
      <th>端口</th>
      <th>描述</th>
      <th>状态</th>
      <th>入端口流量占用百分比</th>
      <th>出端口流量占用百分比</th>
      <th>入端口错误包数</th>
      <th>出端口错误包数</th>
    </tr>
  </thead>

  <tbody>
    <% @switch.ports.each do |port| %>
      <tr>
        <td><%= port.switch.name %></td>
        <td><%= port.port %></td>
        <td><%= port.remark %></td>
        <td><%= port.status %></td>
        <td><%= port.in_usg %></td>
        <td><%= port.out_usg %></td>
        <td><%= port.in_err %></td>
        <td><%= port.out_err %></td>
      </tr>
    <% end %>
  </tbody>
</table>

